<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main_scroll">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp"
        android:elevation="5dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_device_name"
                android:textSize="18sp"
                android:text="@string/app_name"
                android:textColor="@color/primaryDarkColor"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_connect_status"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp"
                android:text=""
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="@id/tv_device_name"
                app:layout_constraintStart_toEndOf="@id/tv_device_name"
                android:layout_marginStart="3dp"/>
            <ImageView
                android:id="@+id/ac_battMeter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="@id/tv_device_name"
                app:layout_constraintBottom_toBottomOf="@id/tv_device_name"
                app:layout_constraintStart_toEndOf="@id/tv_connect_status"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ac_battLv"
                app:layout_constraintTop_toTopOf="@id/ac_battMeter"
                app:layout_constraintBottom_toBottomOf="@id/ac_battMeter"
                app:layout_constraintStart_toEndOf="@id/ac_battMeter"
                android:fontFamily="sans-serif-condensed-medium"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_device_name"
                app:layout_constraintStart_toStartOf="@id/tv_device_name"
                android:layout_marginTop="5dp"
                android:id="@+id/ac_codecs"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="18dp"
                    android:id="@+id/ac_codecLogo"
                    app:layout_constraintTop_toBottomOf="@id/tv_device_name"
                    app:layout_constraintStart_toStartOf="@id/tv_device_name" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ac_codecText"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    android:text=""
                    android:layout_marginStart="-50dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ac_codecStatus"
                app:layout_constraintTop_toTopOf="@id/ac_codecs"
                app:layout_constraintBottom_toBottomOf="@id/ac_codecs"
                app:layout_constraintStart_toEndOf="@+id/ac_codecs"
                android:layout_marginStart="3dp"
                android:text=""/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>